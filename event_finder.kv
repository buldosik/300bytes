WindowManager:
    MainWindow:
    SecondWindow:
    
    
<Button>:
    font_size:40
    color:0.3, 0.6, 0.7, 1
    size_hint: 0.5, 1
    #!all buttons will have this settings
<FloatLayout>:
    size_hint:0.1,0.1
    Button:
        id: btn1
        pos_hint: {"x":0.5, "top":1} #{"x":, "y", "top","bottom", "left", "right"}
        text:'PLACE!' if btn1.state == "normal" else "placed"

    Button:
        id: btn2
        pos_hint: {"y":0}
        text:'YES?' if btn2.state == "normal" else "NO!"
        background_color: 0.3, 0.4, 0.5, 1



